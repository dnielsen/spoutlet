{% extends 'IdeaBundle::event_layout.html.twig' %}

{% block event_content %}
    <div class="row1">
        <div class="cBx1">
            <p>{{event.content | raw }}</p>
        </div>
        <div class="cBx2">
            <a href="{{ path('idea_show_all', {'groupSlug': group.slug, 'eventSlug': event.slug}) }}" class="submit left" id="event_button">View Ideas</a>
            {% if event.isUserAttending(app.user) or event.getUser() == app.user %}
                <a href="{{ path('idea_create_form', {'groupSlug': group.slug, 'eventSlug': event.slug}) }}" class="submit right" id="event_button">Add Idea</a>
            {% else %}
                <a href="{{ path('group_event_register_and_join', {'groupSlug': group.slug, 'eventId': event.id}) }}" class="submit right" id="event_button">Join Now</a>
            {% endif %}
            <table id="eventDetails" class="tblStyle">
                <tbody>
                <tr>
                    <td width="25%"><strong>Event:</strong></td>
                    <td width="75%">{{event.name}}</td>
                </tr>
                <tr>
                    <td width="25%"><strong>Date:</strong></td>
                    <td width="75%">{{event.DateRangeString}}</td>
                </tr>
                {% if not event.getOnline %}
                <tr>
                    <td width="25%"><strong>Location:</strong></td>
                    <td width="75%">{{ event.location }}</td>

                </tr>
                <tr>
                    <td width="25%"><strong>Map:</strong></td>
                    <td width="75%">
                        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=true"></script>
                        <div id="event-location-map">{{ vichgeo_map_for('location', event) }}</div>
                    </td>
                </tr>
                <tr>
                    <td width="25%"><strong>Address:</strong></td>
                    <td width="75%">{{ event.address1 }}<br/>{{ event.address2 }}</td>
                </tr>
                {% endif %}
                </tbody>
            </table>

            <br>
        </div>
    </div>

{% endblock %}
