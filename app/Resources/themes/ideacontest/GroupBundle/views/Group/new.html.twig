{% extends 'SpoutletBundle::layout.html.twig' %}

{% block title %}Create Group{% endblock %}

{% block content %}

    <h1>Create Group</h1>

    <form action="{{ path('group_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
        {% include 'GroupBundle:Group:_form.html.twig' %}

        <div class="form-actions" style="float: left;">
            <input type="submit" value="Create" formnovalidate/>
            <input type="submit" id="cancel" rel="{{ path('groups') }}" style="margin-left: 10px;" value="Cancel" formnovalidate/>
        </div>
    </form>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% include 'GroupBundle:Group:_css_assets.html.twig' %}
{% endblock %}
