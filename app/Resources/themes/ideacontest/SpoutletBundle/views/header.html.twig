<div id="header">
    <div id="topSocial">
        <ul>

        </ul>
    </div>

    <div id="topNav">
        <ul>
            {% if app.user is null %}
                <li><a href="{{ path('fos_user_security_login') }}">{{ 'platformd.layout.top_menu.sign_in' | trans }}</a></li>
                <li><a href="{{ path('fos_user_registration_register') }}">{{ 'platformd.layout.top_menu.join' | trans }}</a></li>
            {% else %}
                <li><a href="{{ path('_fos_user_security_logout') }}">{{ 'platformd.layout.top_menu.sign_out' | trans }}</a></li>
                {% if is_granted("ROLE_ADMIN") %}
                    <li><a href="{{ path('admin_index') }}">Site Admin</a></li>
                {% endif %}
                <li><a href="{{ path('accounts_index') }}">{{ 'platformd.layout.top_menu.account' | trans }}</a></li>
            {% endif %}
            <li><a href="{{ path('default_index') }}">Home</a></li>
            {% block extra_user_controls %}
            {% endblock %}
        </ul>
    </div>

    {% block banner %}
        <a href="{{ path('default_index') }}"><img src="{{ asset('themes/' ~ site.theme ~ '/spoutlet/img/logo.jpg') }}" alt="Campsite" width="328" height="126" id="brand"></a>
    {% endblock %}

    <img src="{{ asset('themes/' ~ site.theme ~ '/spoutlet/img/tagline.gif') }}" alt="" width="235" height="31" id="tagline">

    <br class="clr">

</div> <!-- end header -->


