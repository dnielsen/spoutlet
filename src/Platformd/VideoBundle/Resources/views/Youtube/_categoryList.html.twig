{% for result in results %}
    {% if result['videos'] | length > 0 %}
        <div class="video-category-wrapper {% if loop.first %}first{% endif %}">
            <div  class="video-category-header"><a href="{{ path('youtube_category', {'slug' : result['category'].slug}) }}">{{ result['category'].name(site.id) }}</a></div>
            {% for video in result['videos'] %}
                <div class="tiled">
                    <div class="video-thumb-wrapper">
                        <a href="{{ path('youtube_view', {'slug' : video.slug}) }}"><img src="{{ video.thumbnailSq }}" alt="{{ video.title }}" /></a>
                        <span class="video-duration">{{ video.formattedDuration }}</span>
                    </div>
                    <div class="more-videos-link">{{ video | pd_link_full(video.title) }}</div>
                    <div class="video-details">
                        <span class="views">{{ video.views}} {{ 'youtube.views' | pd_trans }}</span>
                        <span class="points">{{ video.votes | length }} {{ 'youtube.points' | pd_trans }}</span>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endfor %}
