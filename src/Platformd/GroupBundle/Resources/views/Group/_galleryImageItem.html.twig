<div class="group-image-item">
    <div class="group-image-image">
        <a href="{{ path('gallery_media_show', { id: image.id }) }}" title="{{ image.title }}" img-data="{{ image.image.id }}" style="border:none;">
            <img src="{{ image.image.filename | imagine_filter('image_thumb_small') }}" alt="{{ image.title }}" />
        </a>
    </div>
    <div class="group-image-title">
        {{ image.title }}
    </div>
    <div class="group-image-actions">
        <div data-group-admin="true">
            <a href="{{ path('gallery_delete_media', { 'id' : image.id })}}" onclick="return confirm('Are you sure you want to delete this image?');">{{ 'platformd.groups.images.delete' | pd_trans }}</a> |
            <a href="{{ path('gallery_edit_media', { id : image.id }) }}">{{ 'platformd.groups.images.edit' | pd_trans }}</a> |
        </div>
        <a href="javascript:void(0);" class="report-content" report-data="{{ image.id }}">{{ 'platformd.groups.images.report' | pd_trans }}</a>
    </div>
</div>
