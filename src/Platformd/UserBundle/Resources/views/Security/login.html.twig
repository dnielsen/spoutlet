{% extends "FOSUserBundle::layout.html.twig" %}

{% block title 'platformd.user.login.title' | pd_trans %}

{% block fos_user_content %}
<h2>{{ 'platformd.user.login_header' | pd_trans }}</h2>

<div class="login_page_interstitial interstitial">

<form action="{{ path("_fos_user_security_check") }}" method="post" class="form form-horizontal">

    {% if error %}
        <div class="form-msg-error">{{ error | pd_trans }}</div>
    {% endif %}

    <div class="form_row">
        <label for="username">{{ 'security.login.username_or_email'|trans({}, 'FOSUserBundle') }}</label>
        <input type="text" class="form-txt" id="username" name="_username" value="{{ last_username }}" />
    </div>

    <div class="form_row">
        <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <input type="password" class="form-txt" id="password" name="_password" />
    </div>

    {#
        hidden for now - just for simplicity
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
    #}

    <input type="submit" id="_submit" class="button btn btn-primary" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />

    <a href="{{ path('fos_user_resetting_request') }}">{{ 'platformd.user.login.forgot_password' | pd_trans }}</a>

    <div class="login_page_register">
        Don't have an account? <a href="{{ path('fos_user_registration_register') }}">Register now!</a>
    </div>

</form>

</div>
{% endblock fos_user_content %}
