{% set fbLoginText = optionalFacebookText is defined ? optionalFacebookText : 'platformd.facebook.login_label' | trans %}

<div class="socialLogin" data-url="{{ path('facebook_login') }}">
    <div type="button" class="rounded Button hasText Module large ajax btn unAuthFacebookConnect registerLoginButton">
        <em></em>
        <span class="buttonText">{{ fbLoginText }}</span>
    </div>

</div>
<script type="text/javascript">
    $('.socialLogin').click(function () {
        var url = $(this).attr('data-url');
        window.location = url;
    });
</script>
