{% extends 'SpoutletBundle::adminLayout.html.twig' %}

{% block title %}{{ "fos_user_admin_user_edit_title" | trans({ "%username%" : user.username }, "FOSUserBundle") }}{% endblock %}

{% block content %}
    <form method="post" action="{{ path("Platformd_UserBundle_admin_edit", { "id" : user.id}) }}" class="form">
        {{ form_errors(form) }}
        
        {{ form_row(form.username, { "attr" : {"label" : ""} }) }}
        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
        {{ form_row(form.email) }}
        
        <div>
            {{ form_rest(form) }}
            <input type="submit" value="{{ 'fos_user_admin_user_edit'|trans({}, 'FOSUserBundle') }}" class="button" formnovalidate />
        </div>
    </form>
{% endblock %}
