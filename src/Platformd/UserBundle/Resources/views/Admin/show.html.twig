{% extends 'SpoutletBundle::adminLayout.html.twig' %}

{% block title %}{{ "fos_user_admin_user_show_title" | trans({ "%username%" : user.username }, "FOSUserBundle") }}{% endblock %}

{% block content %}
    <h1>User "{{ user.username }}"</h1>

    <a
        href="{{ path("Platformd_UserBundle_admin_rest_password", { "id" : user.id }) }}"
        class="btn btn-primary">
        {{ "fos_user_admin_reset_password" | trans({}, "FOSUserBundle" ) }}
    </a>
    <a
        href="{{ path("Platformd_UserBundle_admin_edit", { "id" : user.id }) }}"
        class="btn btn-primary">
        {{ "fos_user_admin_edit" | trans({}, "FOSUserBundle" ) }}
    </a>

    <br />
    <br />

    <table class="table table-bordered">
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ user.firstname }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ user.lastname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>DOB</th>
            <td>{{ user.birthdate|date }}</td>
        </tr>
        <tr>
            <th>State</th>
            <td>{{ user.state }}</td>
        </tr>
        <tr>
            <th>Country</th>
            <td>{{ user.country }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ user.phoneNumber }}</td>
        </tr>
        <tr>
            <th>Last Seen</th>
            <td>{{ user.lastLogin|date }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ user.created|date }}</td>
        </tr>
        <tr>
            <th>IP Address at creation</th>
            <td>{{ user.ipAddress }}</td>
        </tr>
    </table>

{% endblock %}
