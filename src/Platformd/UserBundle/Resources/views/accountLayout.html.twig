{% extends 'SpoutletBundle::layout.html.twig' %}

{% block title %}{% if user == app.user %}My Profile{% else %}{{ user.name }}{% endif %} | Campsite{% endblock %}

{% block content %}

    {% if user == app.user %}
    <div class="col_fifth">
        <ul class="borderRt">
            <li><a href="{{ path('accounts_settings') }}">Settings</a></li>
            <li><a href="{{ path('profile', {'userId': user.id}) }}">Profile</a></li>
            <li><a href="{{ path('accounts_groups') }}">My Groups</a></li>
            <li><a href="{{ path('accounts_events') }}">My Events</a></li>
            {% if user.ownedDepartments|length > 0 %}
                <li><a href="{{ path('accounts_sponsorships') }}">My Sponsorships</a></li>
            {% endif %}
            <li><a href="{{ path('accounts_pages') }}">My Pages</a></li>
            <li><a href="{{ path('accounts_entrySets') }}">My Lists</a></li>
            <li><a href="{{ path('accounts_entries') }}">My Entries</a></li>
        </ul>
    </div>
    {% endif %}

    <div class="col_four_fifths">

    {% block profile_content %}
    {% endblock %}

    </div>

{% endblock %}
