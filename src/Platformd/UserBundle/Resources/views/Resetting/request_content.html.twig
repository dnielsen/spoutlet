<h1>{{ 'platformd.user.request_reset.title' | trans }}</h1>

<div class="std_2col">
    <div class="left">
        <p>
            {{ 'platformd.user.request_reset.help_message' | trans | format(path('contact')) | raw }}
        </p>
        {% if invalid_username is defined %}
            <p style="color: #c62828;font-weight:bold;font-style:italic;">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle')|raw }}</p>
        {% endif %}
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-horizontal fos_user_resetting_request">

                <div class="control-group" style="margin-left: -100px;">

                    <label class="control-label" for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="controls">
                        <input type="text" id="username" name="username" required="required" class="form-txt" />
                        <button class="btn btn-primary" type="submit" style="margin-left: 10px">{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</button>
                    </div>
                </div>
            <p><a href="{{ path('fos_user_registration_register') }}">{{ 'platformd.user.login.not_a_member_join' | pd_trans }}</a></p>
        </form>

        <p>
            {{ 'platformd.user.request_reset.spam_message' | trans }}
        </p>
    </div>
    <div class="right">
    </div>
</div>
