{% form_theme form theme %}
{% form_theme form.recaptcha 'EWZRecaptchaBundle:Form:ewz_recaptcha_widget.html.twig' %}

<h2>{{ 'platformd.user.register_title' | trans }}</h2>

<div class="registration-requirements">
    <p>{{ 'platformd.user.register.requirements' | trans }}</p>
    <p>{{ 'platformd.user.register.already' | trans({'<': '<a href="'~path('fos_user_security_login')~'">', '>': '</a>'})|raw }}</p>
</div>

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form form-horizontal">

    {{ form_errors(form) }}

    <table border="0" width="100%" cellpadding="6" spacing="2" class="form-table" align="center">
        <tbody>
            <tr id="row_alias">
                <td class="form-title-cell" width="33%" align="right" valign="top">{{ form_label(form.username) }}</td>
                <td class="form-element-cell" valign="top">{{ form_widget(form.username) }}</td>
            </tr>
            <tr id="row_email">
                <td class="form-title-cell" width="33%" align="right" valign="top">{{ form_label(form.email) }}</td>
                <td class="form-element-cell" valign="top">{{ form_widget(form.email) }}</td>
            </tr>
            <tr id="row_password">
                <td class="form-title-cell" width="33%" align="right" valign="top">{{ form_label(form.plainPassword) }}</td>
                <td class="form-element-cell" valign="top">{{ form_widget(form.plainPassword) }}</td>
            </tr>
            <tr id="row_email_repeat">
                <td class="form-title-cell" width="33%" align="right" valign="top">Confirm Email</td>
                <td class="form-element-cell" valign="top">Confirm Email Input</td>
            </tr>
            <tr id="row_name_first">
                <td class="form-title-cell" width="33%" align="right" valign="top">{{ form_label(form.firstname) }}</td>
                <td class="form-element-cell" valign="top">{{ form_widget(form.firstname) }}</td>
            </tr>
            <tr id="row_name_last">
                <td class="form-title-cell" width="33%" align="right" valign="top">{{ form_label(form.lastname) }}</td>
                <td class="form-element-cell" valign="top">{{ form_widget(form.lastname) }}</td>
            </tr>
            <tr id="row_birthdate">
                <td class="form-title-cell" width="33%" align="right" valign="top">{{ form_label(form.birthdate) }}</td>
                <td class="form-element-cell" valign="top">
                    {{ form_errors(form.birthdate) }}

                    {{ form_widget(form.birthdate.year) }}
                    {{ 'year' | trans({}, 'forms') }}
                    {{ form_widget(form.birthdate.month) }}
                    {{ 'month' | trans({}, 'forms') }}
                    {{ form_widget(form.birthdate.day) }}
                    {{ 'day' | trans({}, 'forms') }}
                </td>
            </tr>
            <tr id="row_address_country">
                <td class="form-title-cell" width="33%" align="right" valign="top">{{ form_label(form.country) }}</td>
                <td class="form-element-cell" valign="top">{{ form_widget(form.country) }}</td>
            </tr>
            <tr id="row_address_state">
                <td class="form-title-cell" width="33%" align="right" valign="top">{{ form_label(form.state) }}</td>
                <td class="form-element-cell" valign="top">{{ form_widget(form.state) }}</td>
            </tr>
            <tr id="row_recaptcha">
                <td class="form-title-cell" width="33%" align="right" valign="top"></td>
                <td class="form-element-cell" valign="top">{{ form_widget(form.recaptcha) }}</td>
            </tr>

            <tr id="row_survey_ownership">
                <td class="form-title-cell" width="33%" align="right" valign="top">{{ form_label(form.hasAlienwareSystem) }}</td>
                <td class="form-element-cell" valign="top">{{ form_widget(form.hasAlienwareSystem) }}</td>
            </tr>

            <tr id="row_survey_discover">
                <td class="form-title-cell" width="33%" align="right" valign="top">{{ form_label(form.latestNewsSource) }}</td>
                <td class="form-element-cell" valign="top">{{ form_widget(form.latestNewsSource) }}</td>
            </tr>

            <tr id="row_agreed_tos_privacy">
                <td class="form-title-cell" width="33%" align="right" valign="top"></td>
                <td class="form-element-cell" valign="top">
                    {{ form_errors(form.termsAccepted) }}
                    {{ form_widget(form.termsAccepted) }}
                    <span class="required">*</span>
                    {{ 'fos_user_registration_form_termsAccepted' | trans(
                        {
                            '%terms_url%': path('terms_conditions'),
                            '%privacy_url%': path('privacy')
                        },
                        'forms'
                    ) | raw }}
                </td>
            </tr>

            <tr id="row_dell_optin">
                <td class="form-title-cell" width="33%" align="right" valign="top"></td>
                <td class="form-element-cell" valign="top">
                    {{ form_errors(form.subscribedAlienwareEvents) }}
                    {{ form_widget(form.subscribedAlienwareEvents) }}
                    {{ 'fos_user_registration_form_subscribedAlienwareEvents' | trans({}, 'forms') }}
                </td>
            </tr>

            <tr>
                <td class="form-title-cell" width="33%" align="right" valign="top"></td>
                <td class="form-element-cell" valign="top">
                    {{ form_errors(form.subscribedGamingNews) }}
                    {{ form_widget(form.subscribedGamingNews) }}
                    {{ 'fos_user_registration_form_subscribedGamingNews' | trans({}, 'forms') }}
                </td>
            </tr>


            <tr id="row_">
                <td class="form-title-cell" colspan="2" align="center">Register Button</td>
            </tr>
        </tbody>
    </table>
</form>
