{% form_theme form theme %}

<h1>{{ 'platformd.user.register_title' | trans }}</h1>

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form">

    {{ form_errors(form) }}

    {{ form_row(form.username) }}

    {{ form_row(form.email) }}

    {{ form_row(form.plainPassword) }}

    {{ form_row(form.firstname) }}

    {{ form_row(form.lastname) }}

    <div class="form_row">
        {{ form_errors(form.birthdate) }}
        {{ form_label(form.birthdate) }}

        {{ form_widget(form.birthdate.month) }}
        {{ form_widget(form.birthdate.day) }}
        {{ form_widget(form.birthdate.year) }}
    </div>

    {{ form_row(form.phoneNumber) }}

    {{ form_row(form.country) }}

    {{ form_row(form.state) }}
    
    {# Change form theme so the captcha can be displayed #}
    {% form_theme form 'EWZRecaptchaBundle:Form:ewz_recaptcha_widget.html.twig' %}
    
    {# Switch back to previous theme #}

    {{ form_errors(form.recaptcha) }}

    {{ form_widget(form.recaptcha, { "attr" : {
            "options" : { "theme" : "red" }
        }
    }) }}

    {{ form_row(form.hasAlienwareSystem) }}

    {{ form_row(form.latestNewsSource) }}

    <div class="form_row">
        {{ form_errors(form.termsAccepted) }}
        <label>&nbsp;</label>
        {{ form_widget(form.termsAccepted) }}
        {{ 'fos_user_registration_form_termsAccepted' | trans({}, 'forms') }}
    </div>

    <div class="form_row">
        {{ form_errors(form.subscribedGamingNews) }}
        <label>&nbsp;</label>
        {{ form_widget(form.subscribedGamingNews) }}
        {{ 'fos_user_registration_form_subscribedGamingNews' | trans({}, 'forms') }}
    </div>

    <div>
        <label>&nbsp;</label>
        <a href="http://www.alienwarearena.com/legal/terms/" target="_blank">{{ 'platformd.user.register.terms_label' | trans }}</a>
        <a href="http://www.alienwarearena.com/legal/privacy/" target="_blank">{{ 'platformd.user.register.privacy_label' | trans }}</a>
    </div>

    <div>
        {{ form_rest(form) }}
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="button" formnovalidate />
    </div>
</form>
