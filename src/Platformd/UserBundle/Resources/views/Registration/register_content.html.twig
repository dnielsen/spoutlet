{% form_theme form theme %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">

    {{ form_errors(form) }}

    {{ form_row(form.username) }}

    {{ form_row(form.email) }}

    {{ form_row(form.plainPassword) }}

    {{ form_row(form.firstname) }}

    {{ form_row(form.lastname) }}

    {{ form_row(form.birthdate) }}

    {{ form_row(form.phoneNumber) }}

    {{ form_row(form.country) }}

    {{ form_row(form.state) }}
    
    {# Change form theme so the captcha can be displayed #}
    {% form_theme form 'EWZRecaptchaBundle:Form:ewz_recaptcha_widget.html.twig' %}
    
    {# Switch back to previous theme #}

    {{ form_errors(form.recaptcha) }}

    {{ form_widget(form.recaptcha, { "attr" : {
            "options" : { "theme" : "red" }
        }
    }) }}

    {% form_theme form theme %}

    {{ form_row(form.hasAlienwareSystem) }}

    {{ form_row(form.latestNewsSource) }}

    {{ form_row(form.termsAccepted) }}

    {{ form_row(form.subscribedArenaNews) }}

    {{ form_row(form.subscribedGamingNews) }}

    <div>
        {{ form_rest(form) }}
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="button" />
    </div>
</form>
