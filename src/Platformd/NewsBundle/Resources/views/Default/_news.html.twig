<div class="newsBlurb">
    <h2>
        <a href="{{ item | pd_link }}" {{ item is external ? 'target="_blank"' : '' }}>{{ item.title }}</a>
    </h2>
    <h6>
        {{ 'announced_date' | trans({
            '%posted_date%': ('sweepstakes_date_format' | trans(item.postedAtArray))
        })}}
    </h6>
    <p>{{ item.blurb }}</p>
    <a href="{{ item | pd_link }}">{{ 'read_more' | trans }}</a>
</div>