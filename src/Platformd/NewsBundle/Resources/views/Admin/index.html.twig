{% extends 'SpoutletBundle::adminLayout.html.twig' %}
{% block title %}{{ "platformd.admin.news.heading" | trans }}{% endblock %}

{% block content %}

<h1>{{ "platformd.admin.news.heading" | trans }}</h1>

<table class="table table-striped table-bordered tablesorter">
    <thead>
        <tr>
            <th>{{ "platformd.admin.news.title" | trans }}</th>
            <th>{{ "tenant_site" | trans({}, 'admin') }}</th>
            <th>{{ 'url' | trans }}</th>
            <th>{{ "published_status" | trans }}</th>
            <th>{{ "platformd.help.actions" | trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for item in news %}
        <tr>
            <td><a href="{{ path('NewsBundle_admin_edit', { "id": item.id }) }}">{{ item.title }}</a></td>
            <td>
                {% for site in item.sites %}
                    {{ site.name -}}
                    {{- loop.last ? '' : ',' }}
                {% endfor %}
            </td>
            <td>
                {{ item | pd_link_full }}
            </td>
            <td>
                <i>
                {% if item.published%}
                    published
                {% else %}
                    unpublished
                {% endif %}
                </i>
            </td>
            <td>
                <a href="{{ path('NewsBundle_admin_edit', { "id": item.id }) }}">{{ "platformd.admin.news.edit" | trans }}</a> -
                <a href="{{ path('NewsBundle_admin_delete', { "id" : item.id }) }}" class="delete_link">{{ "platformd.admin.news.delete" | trans }}</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('NewsBundle_admin_new') }}">{{ "platformd.admin.news.create" | trans }}</a>

{% if news.haveToPaginate %}
    {# Warning: when using pagerfanta, make sure to specify the routeName otherwise pagerfanta will try to guess it #}
    {# which is very resource intensive and can increase page load time by 5 seconds !!! #}
    {{ pagerfanta(news, 'default', {'routeName' : 'NewsBundle_admin_homepage'}) }}
{% endif %}

<script type="text/javascript">
    jQuery(function($) {
        $("a.delete_link").bind("click", function(event) {
            if (!confirm("{{ 'platformd.admin.news.delete_confirm' | trans }}")) {
                event.stopPropagation();
                event.preventDefault();

                return false;
            }

            $("<form />", { "method":"post", "action":$(this).attr("href")})
                .appendTo(jQuery('body'))
                .submit()
                .remove()
            ;
        })
    });
</script>
{% endblock %}
