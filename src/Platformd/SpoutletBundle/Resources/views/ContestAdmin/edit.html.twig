{% extends 'SpoutletBundle::adminLayout.html.twig' %}

{% block content %}

<h1>
    <i class="icon-pencil"></i>
    Contest edit
</h1>

<form action="{{ path('admin_contest_update', { 'slug': contest.slug }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    {% include 'SpoutletBundle:ContestAdmin:_form.html.twig' with {
        'form': edit_form
    } %}

    <div class="form-actions">
        <button type="submit" class="btn btn-primary" formnovalidate>{{ 'save' | trans({}, 'admin') }}</button>
    </div>
</form>
</div>

<a href="{{ path('admin_contest_index') }}">
    Back to the list
</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% include 'SpoutletBundle:CountryAgeRestrictionRule:_formJavascript.html.twig' %}
{% endblock %}
