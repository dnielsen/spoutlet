{% extends 'SpoutletBundle::layout.html.twig' %}

{% block content %}
<h3>{{ 'galleries.submit_photo_page_header' | trans }}</h3>

<div class="std_2col">
    <div class="left">
        <form action="{{ path('gallery_submit') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
            {% include 'SpoutletBundle:Gallery:_editImageForm.html.twig' %}
        </form>
    </div>
    <div class="right">
        {% for media in medias %}
            <div class="gallery-media-wrapper">
                <img title="{{ media.title }}" class="gallery-media" data-title={{ media.title }} data-id="{{ media.id }}" src="{{ media_path(media.image, {'local': true}) | imagine_filter('image_thumb') }}" />
            </div>
        {% endfor %}
    </div>
</div>


{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/spoutlet/css/forms.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/spoutlet/css/galleries.css') }}" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function () {

            $('.gallery-media').click(function () {
                $('.gallery-media').removeClass('active');
                $(this).addClass('active');
                var title = $(this).attr('data-title');
                var id = $(this).attr('data-id');
                $('#platformd_spoutletbundle_gallery_media_title').val(title);
                $('#platformd_spoutletbundle_gallery_media_mediaId').val(id);
            });

            $('.gallery-media').qtip({
                style: {
                    border: {
                        width: 2,
                        radius: 5 },
                        padding: 10,
                        tip: true,
                        name: 'dark'
                    },
                    position: {
                        corner: {
                            tooltip: 'leftMiddle',
                            target: 'rightMiddle'
                    }
                }
            });

            $('.gallery-media').hover(
                function () {

                    $(this).addClass('active');
                },
                function () {
                    var selected = $('#platformd_spoutletbundle_gallery_media_mediaId').val();
                    var current = $(this).attr('data-id');

                    if(current == selected) {
                        return;
                    }
                    $(this).removeClass('active');
                }
            );
        });
    </script>
{% endblock %}
