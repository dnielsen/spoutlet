{% extends 'SpoutletBundle::layout.html.twig' %}

{% block title 'galleries.submit_photo_page_title' | trans %}

{% block content %}
<h3>{{ 'galleries.submit_photo_page_header' | trans }}</h3>

<form class="edit-form" action="{{ path('gallery_submit') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}

    <button class="btn btn-primary" type="submit">Save Photos</button>
    <button id="cancel" class="btn btn-primary" rel="{{ path('gallery_index') }}" style="margin-left: 10px;">Cancel</button>
</form>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/spoutlet/css/forms.css') }}" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function() {


            $('#cancel').delegate('','click change',function(){
                window.location = $(this).attr('rel');
                return false;
            });
        });
    </script>
{% endblock %}
