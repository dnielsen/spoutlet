<div>
    {% if videoForm is defined %}

        <form action="{{ videoFormAction }}" method="post" {{ form_enctype(videoForm) }} class="form-horizontal">

            {% form_theme videoForm 'SpoutletBundle:Admin:normalLabel.html.twig' %}
            {% form_theme videoForm 'SpoutletBundle:Admin:_bootstrapForms.html.twig' %}

            {{ form_errors(videoForm) }}

            <div class="row-fluid">
                <fieldset>
                    <legend>a) Basic Information</legend>
                        <div class="row-fluid first">
                            <div class="span6">
                                {{ form_row(videoForm.title) }}
                                {{ form_row(videoForm.youTubeVideoId) }}
                            </div>
                        </div>
                </fieldset>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary" formnovalidate>Post Video</button>
            </div>

            {{ form_rest(videoForm) }}

        </form>

    {% elseif video is defined %}

        <div class="group-video-item" style="margin: 20px;">
            <div class="group-video-actions">

                {% if userIsAdminOrOwner %}
                    <a href="{{ path('group_delete_video', { 'id' : group.id, 'videoId' : video.id })}}" onclick="return confirm('Are you sure you want to delete this video?');">delete</a> |
                    <a href="{{ path('group_edit_video', { 'id' : group.id, 'videoId' : video.id })}}">edit</a> |
                {% endif %}

                report

            </div>
            <div class="group-video-title">{{ video.title }}</div>
            <div class="group-video-author">{{ video.author.username }}</div>
            <div class="group-video-date">{{ video.createdAt | date }}</div>
            <div class="group-video">
                {{ video.youTubeVideoId }}
            </div>
        </div>

    {% else %}

        {% if userIsAdminOrOwner %}
            <a href='{{ path('group_add_video', {'id' : group.id }) }}'>Add Video</a>
        {% endif %}

        {% if groupVideos is defined %}

            {% for video in groupVideos %}

                <div class="group-video-item" style="margin: 20px;">
                    <div class="group-video-actions">

                        {% if userIsAdminOrOwner %}
                            <a href="{{ path('group_delete_video', { 'id' : group.id, 'videoId' : video.id })}}" onclick="return confirm('Are you sure you want to delete this video?');">delete</a> |
                            <a href="{{ path('group_edit_video', { 'id' : group.id, 'videoId' : video.id })}}">edit</a> |
                        {% endif %}

                        report

                    </div>
                    <div class="group-video-title"><a href="{{ path('group_view_video', { 'id' : group.id, 'videoId' : video.id })}}">{{ video.title }}</a></div>
                    <div class="group-video-author">{{ video.author.username }}</div>
                    <div class="group-video-date">{{ video.createdAt | date }}</div>
                    <div class="group-video">
                        {{ video.youTubeVideoId }}
                    </div>
                </div>
            {% else %}
                <p>No videos yet... please come back later!</p>
            {% endfor %}
        {% else %}
            <p>No videos yet... please come back later!</p>
        {% endif %}
    {% endif %}
</div>
