{% extends 'SpoutletBundle::layout.html.twig' %}

{% block title 'Edit Group Page' %}

{% block content %}
<h1>
    <i class="icon-pencil"></i>
    Edit Group Page
</h1>

<form action="{{ path('group_update', { 'id': group.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    {% include 'SpoutletBundle:Group:_form.html.twig' with {
        'form': edit_form
    } %}

    <div class="form-actions">
        <button type="submit" class="btn btn-primary" formnovalidate>{{ 'save' | trans({}, 'admin') }}</button>
    </div>
</form>

<a href="{{ path('group') }}">
    Back to the list
</a>
{% endblock %}
{% block stylesheets %}
 {{ parent() }}
 <link rel="stylesheet" type="text/css" href="{{ asset('bundles/spoutlet/css/forms.css') }}" />
 
{% endblock %}
