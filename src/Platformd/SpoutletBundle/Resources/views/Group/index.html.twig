{% extends 'SpoutletBundle::layout.html.twig' %}

{% block content %}
<h1>Groups</h1>

<table class="table table-striped table-bordered tablesorter">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Name</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
    {% for group in entities %}
        <tr>
            <td><a href="{{ path('group_edit', { 'id': group.id }) }}">edit</a> | <a href="{{ path('group_delete', { 'id' : group.id })}}" onclick="return confirm('Are you sure you want to delete this group?');">delete</a> | <a href="{{ path('group_join', { 'id': group.id }) }}">join</a> | <a href="{{ path('group_leave', { 'id': group.id }) }}">leave</a></td>
            <td><a href="{{ path('group_show', { 'id': group.id }) }}">{{ group.name }}</a></td>
            <td>
                {% if group.isPublic %}
                    <span class="label label-success">Public</span>
                {% else %}
                    <span class="label label-warning">Private</span>
                {% endif %}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">
                <em>There are no groups!</em>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('group_new_getting_started') }}">
    Create a new group
</a>
{% endblock %}
