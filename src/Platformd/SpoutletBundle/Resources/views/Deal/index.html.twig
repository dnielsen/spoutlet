{% extends 'SpoutletBundle::layout.html.twig' %}

{% block title 'deals' | trans %}

{% block content %}
{% set dealDeafultImage = '/bundles/spoutlet/images/alienwarelogothumb.png' %}

    {% if mainDeal %}
        {% include 'SpoutletBundle:Deal:_dealHeaderCountdown.html.twig' with { 'deal': mainDeal } %}
    {% endif %}
    <div class="std_2col">
        <div class="right">
            {% include 'SpoutletBundle:Default:_dealsAd.html.twig' %}

            <div class="widget-33" style="margin-top: 10px;">
                <div class="widget-header">
                    <div class="widget-title">
                         {{ 'deal_comments' | trans }}
                    </div>
                </div>
                <div class="widget-content">
                    <div class="deals-comments">
                        {% for commentObject in commentsArr %}
                        {% set comment = commentObject.comment %}
                        {% set deal = commentObject.object %}
                            {% set dealCommentImage = deal.thumbnailComment ? media_path(deal.thumbnailComment) : dealDeafultImage %}
                            <div class="dealListItem">
                            <div>
                                <img class="dealListItemThumb" src="{{ dealCommentImage }}" title="{{ deal.name }}" alt="{{ deal.name }}">
                                <div class="commentListItemDetails">
                                    <ul class="dealDetails">
                                        <li class="dealTitle"><a class="movie_ellipsis" title="" href="{{ deal | pd_link }}">{{ deal.name }}</a></li>
                                        <li class="dealCommentAuthor">{{ 'by' | trans }} {{ comment.author }}</li>
                                        <li class="dealCommentAt">{{ 'platformd.comment.date_format' | trans(comment.createdAtInTimezoneTranslationArray) }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        {% else %}
                        {{ 'fos_comment_comment_new_headline_first' | trans({}, 'FOSCommentBundle') }}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="left">
            <div class="widget-66">
                <div class="widget-header">
                    <div class="widget-title">
                        {{ 'featured_deals' | trans }}
                    </div>
                </div>
                <div class="widget-content">
                    {% for deal in featuredDeals %}
                    {% set dealImage = deal.thumbnailLarge ? media_path(deal.thumbnailLarge) : dealDeafultImage %}

                        <div class="deal-item">
                            <a href="{{ deal | pd_link }}">
                                <img src="{{ dealImage }}" alt="{{ deal.name }}" />
                            </a>

                            <div>{{ deal | pd_link_full(deal.name) }}</div>

                            {# todo - run this through the KnpTimeBundle #}
                            <div>
                                {% if deal.endsAtUtc %}
                                    <div  style="padding-top: 3px; font-weight: bold;">{{ 'deal_time_remaining' | trans }}</div>
                                    <div>{{ time_diff(deal.endsAtUtc) }}</div>
                                {% else %}
                                    <div  style="padding-top: 3px; font-weight: bold;">{{ 'deal_time_remaining' | trans }}</div>
                                    <div>&nbsp;</div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="widget-66" style="margin: 10px 0 0 0;">
                <div class="widget-header">
                    <div class="widget-title">
                        {{ 'deals' | trans }}
                    </div>
                </div>
                <div class="widget-content">
                    {% if allDeals %}
                            {% for deal in allDeals %}
                            {% set dealImage = deal.thumbnailLarge ? media_path(deal.thumbnailLarge) : dealDeafultImage %}

                            <div class="deal-item">
                            <a href="{{ deal | pd_link }}">
                                <img src="{{ dealImage }}" alt="{{ deal.name }}" />
                            </a>

                            <div>{{ deal | pd_link_full(deal.name) }}</div>

                            {# todo - run this through the KnpTimeBundle #}
                            <div>
                                {% if deal.endsAtUtc %}
                                    <div  style="padding-top: 3px; font-weight: bold;">{{ 'deal_time_remaining' | trans }}</div>
                                    <div>{{ time_diff(deal.endsAtUtc) }}</div>
                                {% else %}
                                    <div  style="padding-top: 3px; font-weight: bold;">{{ 'deal_time_remaining' | trans }}</div>
                                    <div>&nbsp;</div>
                                {% endif %}
                            </div>
                        </div>
                            {% endfor %}
                    {% endif %}
                </div>
            </div>
            <div class="widget-66" style="margin: 10px 0 0 0;">
                <div class="widget-header">
                    <div class="widget-title">
                        {{ 'expired_deals' | trans }}
                    </div>
                </div>
                <div class="widget-content">
                    {% if expiredDeals %}
                            {% for deal in expiredDeals %}
                            {% set dealImage = deal.thumbnailLarge ? media_path(deal.thumbnailLarge) : dealDeafultImage %}

                                {# We need to improve this, but it does work #}

                                <div style="background: url({{ dealImage }}); background-repeat: no-repeat; width: 138px; height: 83px; border: 1px solid #4a4a4a;">
                                    <a href="{{ deal | pd_link }}" style="width: 138px; height: 83px; display:block;">
                                        <img src="/bundles/spoutlet/images/expired.png" alt="deal expired" />
                                    </a>
                                </div>
                                <div style="padding-top: 3px; font-weight: bold;">{{ deal | pd_link_full(deal.name) }}</div>
                            {% endfor %}
                    {% endif %}
                </div>
            </div>
            <div class="clear">&nbsp;</div>
        </div>
    </div>


{% endblock %}
{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/spoutlet/css/deals.css') }}" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(function() {
            var endsAt = new Date($('#deal-ends-date').val());
            $('#time-left').countdown({
                until: endsAt,
                timezone: 0,
                compact: false,
                layout: $('#time-left').html()
            });

            $('.deals-timeleft').fadeIn();
        });
    </script>

{% endblock %}
