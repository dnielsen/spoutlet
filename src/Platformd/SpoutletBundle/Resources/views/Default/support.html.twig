                <li>{{ "platformd.help.help_page.regional_addresses_europe" | trans }} - <a href="mailto:europe@alienwarearena.com">europe@alienwarearena.com</a></li>
                <li>{{ "platformd.help.help_page.regional_addresses_latin_america" | trans }} - <a href="mailto:latam@alienwarearena.com">latam@alienwarearena.com</a></li>
            </ul>
            
