<div class="widget-66" id="videos" style="margin-top: 15px;">
    <div class="widget-header">
        <div class="widget-title">{{ 'platformd.layout.page_content.videos' | trans}}</div>
    </div>
    <div class="widget-content">
        {% for video in videos %}
            <div class="tiled{% if loop.index == 1 or loop.index == 2 or loop.index == 3 %} first{% endif %}">
                <div class="video-thumb-wrapper">
                    <a href="{{ path('youtube_view', {'slug' : video.slug}) }}"><img src="{{ video.thumbnailSq }}" alt="{{ video.title }}" /></a>
                    <span class="video-duration">{{ video.formattedDuration }}</span>
                </div>
                <div class="more-videos-link">{{ video | pd_link_full(video.title) }}</div>
                <div class="video-details">
                    <span class="views">{{ video.views}} {{ 'youtube.views' | trans }}</span>
                    <span class="points">{{ video.votes | length }} {{ 'youtube.points' | trans }}</span>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="widget-footer">
            <a class="aw-link" href="{{ path('youtube_index') }}">{{ 'platformd.layout.page_content.view_more' | trans}}</a>
        <div class="clear"></div>
    </div>
</div>

