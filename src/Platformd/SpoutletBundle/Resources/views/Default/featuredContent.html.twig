<div class="widget-66" id="featured-content">
	<div class="featured-content-header">
        <a href="javascript:void(0);" class="active" id="featured-news">{{ 'platformd.layout.page_content.events' | trans }}</a>
		<a href="javascript:void(0);" id="featured-events">{{ 'platformd.layout.page_content.events' | trans }}</a>
		<div style="clear: left;"></div>
	</div>
    <div class="widget-content">
        <div id="featured-content-featured-news" class="featured-content-category active">
        	{% include 'SpoutletBundle:News:launch.html.twig' %}
        </div>
        <div id="featured-content-featured-events" class="featured-content-category">
        	{% for event in all_events %}
            <div class="widget-item">
                <a class="widget-link" href="{{ path('events_detail', { 'slug' : event.slug }) }}">{{ event.name }}</a>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="widget-footer">
        <a href="{{ path('events_index') }}" class="aw-link">{{ 'platformd.layout.page_content.see_more' | trans }}</a>
        <div class="clear"></div>
    </div>
</div>
