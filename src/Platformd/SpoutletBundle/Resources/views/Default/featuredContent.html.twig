<div class="widget-66" id="featured-content">
	<div class="featured-content-header">
        <a href="javascript:void(0);" class="active" id="featured-news">{{ 'platformd.layout.main_menu.news' | trans }}</a>
        {% if not onlyNews %}
        <a href="javascript:void(0);" id="featured-giveaways">{{ 'platformd.layout.page_content.giveaways' | trans }}</a>
        {% endif %}
		<div style="clear: left;"></div>
	</div>
    <div class="widget-content">

        <div id="featured-content-featured-news" class="featured-content-category active">
            {% for item in news %}
                <div class="widget-item">
                    <h3>{{ item.title }}</h3>
                    {{ item.body | raw }}
                </div>
            {% endfor %}
        </div>

        {% if not onlyNews %}
        <div id="featured-content-featured-giveaways" class="featured-content-category">
        	{% for giveaway in all_giveaways %}
            <div class="widget-item">
                <a class="widget-link" href="{{ path('giveaway_show', { 'slug' : giveaway.slug }) }}">{{ giveaway.name }}</a>
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
    <div class="widget-footer">
        <a href="{{ path('news') }}" class="aw-link" id="featured-footer-featured-news">{{ 'platformd.layout.page_content.see_more' | trans }}</a>
        <div class="clear"></div>
    </div>
</div>
