{% extends 'SpoutletBundle::adminLayout.html.twig' %}

{% block content %}
<h1>Wallpapers</h1>

<table class="table table-striped table-bordered tablesorter">
    <thead>
        <tr>
            <th style="width: 65px;">Wallpaper</th>
            <th>Resolution Pack</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for wallpaper in entities %}
        <tr>
            <td><a href="{{ path('admin_wallpaper_edit', { 'id': wallpaper.id }) }}"><img style="width: 65px;" src="{{ media_path(wallpaper.thumbnail) }}" /></a></td>
            <td><a href="{{ media_path(wallpaper.resolutionPack) }}">Download</a></td>
            <td>
                <a href="{{ path('admin_wallpaper_edit', { 'id': wallpaper.id }) }}">edit</a> |
                <a href="{{ path('admin_wallpaper_delete', { 'id': wallpaper.id }) }}">delete</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('admin_wallpaper_new') }}">
    Create a new entry
</a>
{% endblock %}
