{# Here we should only have the bare minimum for the site to display and operate properly #}

{% block stylesheets %}
    {% stylesheets

        filter='cssrewrite'
        output='css/packed/layout_base.css'
    %}
    <link type="text/css" rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts

        output='js/packed/layout_base.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% if app.user is not null and app.user.adminLevel == "ROLE_SUPER_ADMIN" %}
        <script type="text/javascript">
            CKEDITOR.config.customConfig = '/ckeditor/config.admin.js';
        </script>
    {% endif %}
{% endblock %}
