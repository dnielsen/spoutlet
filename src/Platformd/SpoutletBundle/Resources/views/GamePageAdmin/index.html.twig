{% extends 'SpoutletBundle::adminLayout.html.twig' %}

{% block content %}
<h1>Game Pages</h1>

<table class="table table-striped table-bordered tablesorter">
    <thead>
        <tr>
            <th>Name</th>
            <th>Sites</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for gamePage in entities %}
        <tr>
            <td><a href="{{ path('admin_game_page_edit', { 'id': gamePage.id }) }}">{{ gamePage.game.name }}</a></td>
            <td>
                {% for locale in gamePage.gamePageLocales %}
                    {{ locale.locale | site_name }}
                {% endfor %}
            </td>
            <td>
                <a href="{{ path('admin_game_page_edit', { 'id': gamePage.id }) }}">edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('admin_game_page_new') }}">
    Create a new entry
</a>
{% endblock %}