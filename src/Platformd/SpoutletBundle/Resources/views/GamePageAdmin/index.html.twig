{% extends 'SpoutletBundle::adminLayout.html.twig' %}

{% block content %}
<h1>Game Pages</h1>

<table class="table table-striped table-bordered tablesorter">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for gamePage in entities %}
        <tr>
            <td><a href="{{ path('admin_game_page_edit', { 'id': gamePage.id }) }}">{{ gamePage.name }}</a></td>
            <td>
                {% if gamePage.category %}
                    {{ (constant('Platformd\\SpoutletBundle\\Entity\\GamePage::GAME_CATEGORY_LABEL_PREFIX')~gamePage.category) | trans }}
                {% else %}
                    <emph>none</emph>
                {% endif %}
            </td>
            <td>
                <a href="{{ path('admin_game_page_edit', { 'id': gamePage.id }) }}">edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('admin_game_page_new') }}">
    Create a new entry
</a>
{% endblock %}