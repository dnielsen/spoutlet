                'bundles/spoutlet/css/custom-theme/jquery-ui-1.8.16.custom.css'
                'bundles/spoutlet/css/account-registration.css'
                'bundles/spoutlet/css/default.css'
                'bundles/spoutlet/css/legal.css'
