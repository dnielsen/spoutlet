        {% block stylesheets %}
            {% stylesheets
                'plugins/jquery.ad-gallery/jquery.ad-gallery.css'
                'bundles/spoutlet/css/forms.css'
                'bundles/spoutlet/css/style.css'
                'bundles/spoutlet/css/superfish-aw.css'
