<!DOCTYPE html>
<html>
    {% set _isFrontPage = app.request.get('_route') == 'default_index' %}
    <head>
        <meta charset="UTF-8" />
        <title>
            {% block title %}
                {% if eventSession|default %}
                    {{ eventSession.name }}
                {% elseif idea|default %}
                    {{ idea.name }}
                {% elseif entrySet|default %}
                    {{ entrySet.name }}
                {% elseif event|default %}
                    {{ event.name }}
                {% elseif group|default %}
                    {{ group.name }}
                {% else %}
                    Campsite
                {% endif %}
            {% endblock %}
        </title>

        <link rel="shortcut icon" type="image/png" href="{{ asset('/bundles/spoutlet/images/favicon.ico') }}">

        {# Here we include assets for the current active theme #}
        {# {% include '::theme_' ~ site.theme ~ '_assets.html.twig' ignore missing %} #}
        {% block stylesheets %}
            {% stylesheets
            'bundles/spoutlet/css/comments.css'
            'bundles/spoutlet/css/containers.css'
            'bundles/spoutlet/css/custom.css'
            'bundles/spoutlet/css/cycle.css'
            'bundles/spoutlet/css/flash.css'
            'bundles/spoutlet/css/forms.css'
            'bundles/spoutlet/css/hack-global.css'
            'bundles/spoutlet/css/jkmegamenu.css'
            'bundles/spoutlet/css/lists-links.css'
            'bundles/spoutlet/css/news.css'
            'bundles/spoutlet/css/nivo-slider.css'
            'bundles/spoutlet/css/registration.css'
            'bundles/spoutlet/css/royalslider.css'
            'bundles/spoutlet/css/rs-default.css'
            'bundles/spoutlet/css/superfish.css'
            'bundles/spoutlet/css/toggle.css'
            'bundles/spoutlet/css/webFonts.css'
            'bundles/spoutlet/css/widgets.css'
            'bundles/spoutlet/css/jquery_ui/jquery-ui-1.8.23.css'
            'bundles/spoutlet/css/jquery.datetimepicker.css'
            'bundles/user/css/account.css'
            'bundles/spoutlet/css/jquery.mCustomScrollbar.css'
            'bundles/spoutlet/css/qtip.css'
            'plugins/jquery.ad-gallery/jquery.ad-gallery.css'
            filter='cssrewrite'
            output='css/packed/layout_ideacontest.css'
            %}

            <link type="text/css" rel="stylesheet" href="{{ asset_url }}" />

            {% endstylesheets %}
        {% endblock %}

        {% block javascripts %}

            {% javascripts
            'bundles/spoutlet/js/jquery-1.8.3.min.js'
            'bundles/spoutlet/js/jquery-ui-1.8.23.min.js'
            'bundles/spoutlet/js/ie8.js'
            'bundles/spoutlet/js/jquery.ajaxfileupload.js'
            'bundles/spoutlet/js/jquery.cycle.all.js'
            'bundles/spoutlet/js/jquery.dropshadow.js'
            'bundles/spoutlet/js/jquery.qtip.min.js'
            'bundles/spoutlet/js/jquery.simplemodal.js'
            'bundles/spoutlet/js/jquery.simpletip.js'
            'bundles/spoutlet/js/jquery.truncate.min.js'
            'bundles/spoutlet/js/jquery.blockUI.js'
            'bundles/spoutlet/js/jquery.countdown.min.js'
            'bundles/spoutlet/js/jquery.ddslick.min.js'
            'bundles/spoutlet/js/jquery.timeago.min.js'
            'bundles/spoutlet/js/jquery.tools.min.js'
            'bundles/spoutlet/js/nivo-slider/jquery.nivo.slider.pack.js'
            'bundles/spoutlet/js/progressbar.js'
            'bundles/spoutlet/js/custom.js'
            'bundles/spoutlet/js/google-dfp.js'
            'bundles/spoutlet/admin/js/jquery.tablesorter.min.js'
            'bundles/spoutlet/alt_js/*'
            'ckeditor/ckeditor.js'
            'ckeditor/config.js'
            'ckeditor/lang/en.js'
            'bundles/spoutlet/js/datescript.js'
            'bundles/spoutlet/js/jkmegamenu.js'
            'bundles/spoutlet/js/jquery.cycle.all.min.js'
            'bundles/spoutlet/js/jquery.royalslider.min.js'
            'bundles/spoutlet/js/superfish.js'
            'bundles/spoutlet/js/supersubs.js'
            'bundles/spoutlet/js/hoverIntent.js'
            'bundles/spoutlet/js/jquery.datetimepicker.js'
            'plugins/jquery.ad-gallery/jquery.ad-gallery.js'
            output='js/packed/layout_ideacontest.js'
            %}

            <script type="text/javascript" src="{{ asset_url }}"></script>

            {% endjavascripts %}

            <script type="text/javascript">
                var CKEDITOR_BASEPATH = '/ckeditor/';
            </script>

            {% if app.user  %}
            {% if app.user.adminLevel == "ROLE_SUPER_ADMIN" %}
            <script type="text/javascript">
                CKEDITOR.config.customConfig = '/ckeditor/config.admin.js';
                var user_is_logged_in = true;
                var is_admin = true;
            </script>
            {% else %}
            <script type="text/javascript">
                var user_is_logged_in = true;
                var is_admin = false;
            </script>
            {% endif %}
            {% else %}
            <script type="text/javascript">
                var user_is_logged_in = false;
                var is_admin = false;
            </script>
            {% endif %}

        {% endblock %}
    </head>
    <body>
        <noscript>For optimal site interaction, please turn javascript on in your browser. For Firefox, go to Tools &rsaquo; Options &rsaquo; Content. For Internet Explorer, go to Tools &rsaquo; Internet Options &rsaquo; Security &rsaquo; Internet &rsaquo; Custom Level &rsaquo; Enable Active Scripting.<br>Otherwise, please visit our <a href="#sitemap">sitemap</a> for easier navigation.</noscript>

        {% embed 'IdeaBundle::social_scripts.html.twig' %}{% endembed %}

        {% set feedbackKey = app.request.attributes.get('_route') %}

        {% if feedbackKey in feedback_ids|keys and feedback_ids[feedbackKey] %}
            <a href="{{ path('entry_set_view', {'entrySetId': feedback_ids[feedbackKey] }) }}">
                <div class="card feedback"><h3 class="blu">Feedback</h3></div>
            </a>
        {% endif %}

        <div id="wrapper-ht">

            {%  block header %}
                {% embed 'SpoutletBundle::header.html.twig' %}{% endembed %}
                {% embed 'SpoutletBundle::navigation.html.twig' %}{% endembed %}
            {%  endblock %}

            <div id="content">

                {% block pre_content_nav %}{% endblock %}

                {% render url('_flash_message') %}
                <script type="text/javascript">
                    $('.notice').draggable();
                </script>

                <div class="clear"></div>

                {% include 'IdeaBundle:Idea:breadcrumbs.html.twig' %}

                {% block content %}
                {% endblock %}

                <br class="clr">

            </div>
            <div class="push"></div> <!-- needed for sticky footer -->
        </div><!-- end wrapper-ht -->

        {% include 'SpoutletBundle::footer.html.twig' %}
    </body>
</html>
