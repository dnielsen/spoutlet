{% extends 'SpoutletBundle::adminLayout.html.twig' %}

{% block title 'Find Groups' %}

{% block content %}
<h1>Find Groups</h1>
<div style="width: 750px;">
    <form action="{{ path('admin_group_filter') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
        {% include 'SpoutletBundle:GroupAdmin:_findForm.html.twig' %}
        <div style="margin-left: 160px">
            <button type="submit" class="btn btn-primary" formnovalidate>Search</button>
            <a href="{{ path('admin_group_find') }}" class="btn btn-primary" style="margin-left: 20px;">Clear</a>
        </div>
    </form>
    <div>
        <p>Search Results: {{ results | length }} <span style="margin-left: 20px;"><a href="{{ path('admin_group_summary') }}">Export</a></span></p>

        <table class="table table-striped table-bordered tablesorter">
            <thead>
                <tr>
                    <th>Group Name</th>
                    <th>Category</th>
                    <th>Type</th>
                    <th>Region</th>
                    <th>Created</th>
                    <th>Status</th>
                    <th>Organizer</th>
                    <th>Total Members</th>

                    <th>New members</th>
                    <th>Video</th>
                    <th>Photo</th>
                    <th>News</th>
                    <th>Likes</th>
                    <th>Leave Group</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                {% for group in results %}
                    <tr>
                        <td><a href="{{ group.GroupLink }}" target="_blank">{{ group.GroupName }}</a></td>
                        <td>{{ group.Category }}</td>
                        <td>{{ group.Type }}</td>
                        <td>{{ group.Region }}</td>
                        <td>{{ group.CreatedAt | date('m/d/Y') }}</td>
                        <td>{{ group.Status }}</td>
                        <td>{{ group.Organizer }}</td>
                        <td><a href="{{ path('admin_group_export', { "type" : "members", "groupId" : group.GroupId })  }}">{{ group.MemberCount }}</a></td>
                        <td>{{ group.NewMemberCount }}</td>
                        <td><a href="{{ path('admin_group_export', { "type" : "videos", "groupId" : group.GroupId })  }}">{{ group.VideoCount }}</a></td>
                        <td><a href="{{ path('admin_group_export', { "type" : "images", "groupId" : group.GroupId })  }}">{{ group.ImageCount }}</a></td>
                        <td><a href="{{ path('admin_group_export', { "type" : "newsArticles", "groupId" : group.GroupId })  }}">{{ group.NewsArticleCount }}</a></td>
                        <td>{{ group.FacebookLikes }}</td>
                        <td>{{ group.LeftMemberCount }}</td>
                        <td><a href="{{ path('admin_group_details', { "id" : group.GroupId })  }}">View details</a></td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="14">
                            No groups found.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
