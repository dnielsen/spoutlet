{% extends 'SpoutletBundle::adminLayout.html.twig' %}

{% block content %}
<h1>Game list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Slug</th>
            <th>Category</th>
            <th>Facebookfanpageurl</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for game in entities %}
        <tr>
            <td><a href="{{ path('admin_game_edit', { 'id': game.id }) }}">{{ game.id }}</a></td>
            <td>{{ game.name }}</td>
            <td>{{ game.slug }}</td>
            <td>{{ game.category }}</td>
            <td>{{ game.facebookFanpageUrl }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_game_edit', { 'id': game.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_game_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}