{% extends 'SpoutletBundle::adminLayout.html.twig' %}

{% block content %}

<h1>Game edit</h1>

<form action="{{ path('admin_game_update', { 'id': game.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {% include 'SpoutletBundle:GameAdmin:_form.html.twig' with {
        'form': edit_form
    } %}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_game') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('admin_game_delete', { 'id': game.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}