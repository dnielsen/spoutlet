{% extends 'SpoutletBundle::adminLayout.html.twig' %}

{% block content %}
<h1>Deals</h1>

<table class="table table-striped table-bordered tablesorter">
    <thead>
        <tr>
            <th>Name</th>
            <th>Url</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for deal in entities %}
        <tr>
            <td><a href="{{ path('admin_deal_edit', { 'id': deal.id }) }}">{{ deal.name }}</a></td>
            <td>
                {# todo - should use linkable, but linkable doesn't support passing in which site/locale you're targeting #}
                {% set url = deal.externalUrl ? deal.externalUrl : url('deal_show', {'slug': deal.slug, '_locale': site }) %}
                <a href="{{ url }}" target="_blank">{{ url }}</a>
            </td>
            <td>
                {% if deal.isPublished %}
                    <span class="label label-success">Published</span>

                    {% if deal.isActive %}
                        <span class="label label-success">Active</span>
                    {% else %}
                        <span class="label label-warning">Inactive</span>
                    {% endif %}
                {% else %}
                    <span class="label label-warning">Unpublished</span>
                {% endif %}
            </td>
            <td>
                <div class="btn-group">
                    <a href="{{ path('admin_deal_edit', {'id': deal.id}) }}" class="btn btn-primary">
                        <i class="icon-pencil"></i> Edit Deal
                    </a>
                    <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('admin_deal_pool_index', {'dealId': deal.id}) }}"><i class="icon-tasks"></i> Manage Pools</a></li>
                    </ul>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('admin_deal_new') }}">
    Create a new entry
</a>
{% endblock %}
