{% extends "form_div_layout.html.twig" %}

{# give a form_row class to all form row divs #}
{% block form_row %}
{% spaceless %}
<div class="control-group {% if errors|length > 0 %}error{% endif %}">
    {{ form_label(form, label|default(null)) }}
    <div class="controls">
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
</div>
{% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}

    {% for error in errors %}
        <div class="help-inline">
            {{ error.messageTemplate|pd_trans(error.messageParameters, 'validators') }}
        </div>
    {% endfor %}

    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block form_label %}
{% set attr = attr|merge({'class': ''}) %}
{% spaceless %}
    {% if required %}
        {% set attr = attr|merge({'class': 'required'}) %}
    {% endif %}
    {% set attr = attr|merge({'class': 'control-label'}) %}
    <label{% for attrname,attrvalue in attr %} {{attrname}}="{{attrvalue}}"{% endfor %}>
        {% if required %}
            <span class="required">*</span>
        {% endif %}
        {{ label|pd_trans|raw }}
    </label>
{% endspaceless %}
{% endblock %}

{# adds our little icon to the front #}
{% block url_widget %}
    <div class="input-prepend">
        <span class="add-on">
            <i class="icon-share-alt"></i>
        </span>
    </div>
    {% set type = type|default('url') %}
    {{ block('form_widget') }}
{% endblock %}

