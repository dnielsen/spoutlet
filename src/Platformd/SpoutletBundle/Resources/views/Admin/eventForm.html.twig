<h1>
    {% if (form.get('value').id) %}
        {% set title = 'platformd.events.admin.new_title' %}
    {% elseif (form.get('value').published) %}
        {% set title = 'platformd.events.admin.published_title' %}
    {% else %}
        {% set title = 'platformd.events.admin.unpublished_title' %}
    {% endif %}

    {{ title | trans }}
</h1>

<form action="{{ route }}" method="post" {{ form_enctype(form) }} class="form">

    {{ form_errors(form) }}
    
    {{ form_row(form.name) }}

    <div class="form_row">
        {{ form_label(form.slug) }}
        {{ form_errors(form.slug) }}
        {{ form_widget(form.slug) }}
    </div>

    <div class="form-help">
        This field will be generated automatically if left blank. It's format
        should be lowercase letters and dashes, without any http (e.g. my-new-giveaway).
        This becomes *part* of the URL for this item.
    </div>

    {{ form_row(form.starts_at) }}

    {{ form_row(form.ends_at) }}

    {{ form_row(form.location) }}

    {{ form_row(form.city) }}

    {{ form_row(form.country) }}

    {{ form_row(form.hosted_by) }}

    {{ form_row(form.game) }}

    {{ form_row(form.bannerImageFile) }}
    <div>{{ 'platformd.events.admin.banner_note' | trans }}</div>

    <div class="form_row">
        {{ form_label(form.content) }}
        {{ form_errors(form.content) }}
        {{ form_widget(form.content, { 'attr': { 'class': 'ckeditor' } }) }}
    </div>

    {{ form_rest(form) }}

    <input type="submit" class="button" value="{{ "platformd.events.admin.save_event" | trans }}" formnovalidate />
</form>
