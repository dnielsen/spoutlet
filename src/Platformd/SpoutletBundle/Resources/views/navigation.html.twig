                    <li class="more">
                        <a class="blue">
                            {{ 'platformd.layout.main_menu.groups' | trans }}
                        </a>
                        <ul>
                            <li>
                                <a href="{{ path('groups') }}">All Groups</a>
                            </li>
                            <li>
                                <a href="{{ path('accounts_groups') }}">My Groups</a>
                            </li>
                            <li>
                                <a href="{{ path('group_new') }}">Create Group</a>
