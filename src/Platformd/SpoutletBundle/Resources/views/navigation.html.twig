                    <li class="more">
                        <a class="blue">{{ 'platformd.layout.main_menu.news' | trans }}</a>
                        <ul>
                            <li><a href="http://www.alienwarearena.com/articles/">{{ 'platformd.layout.main_menu.articles' | trans }}</a></li>
