                    <li><a href="{{ path('sweepstakes_index') }}">{{ 'platformd.layout.main_menu.sweeps' | trans }}</a></li>
                {% endif %}

                {% if features.hasVideo and not features.hasWallpapers and not features.hasPhotos and not features.hasContests %}
                    <li>{{ site_link('VIDEOS') }}</li>

                {% elseif features.hasVideo or features.hasWallpapers or features.hasPhotos or features.hasContests %}
                    <li class="more">
                        <a class="blue">{{ 'platformd.layout.main_menu.media' | trans }}</a>
                        <ul>
                            {% if features.hasVideo %}
                            <li>{{ site_link('VIDEOS') }}</li>
                            {% endif %}
                            {% if features.hasWallpapers %}
                            <li>{{ site_link('WALLPAPERS') }}</li>
                            {% endif %}
                            {% if features.hasPhotos %}
                            <li>{{ site_link('PHOTOS') }}</li>
                            {% endif %}
                            {% if features.hasContests %}
                            <li>{{ site_link('CONTESTS_IMAGE') }}</li>
                            {% endif %}
