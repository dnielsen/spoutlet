{% extends "SpoutletBundle::_baseFlashMessage.html.twig" %}
{% block flash_type %}success{% endblock %}
{% block flash %}
    <p>
        {{ 'platformd.sweepstakes.entered.message' | trans }}
    </p>
    {% if features.hasGroups %}
        <p>
            {% if sweepstakes.group is not null %}
                {% if groupManager.isMember(user, sweepstakes.group) %}
                    {{ 'deal_join_group_success' | trans | replace({'%link%': path('group_show', {'slug': sweepstakes.group.slug}), '%group%': sweepstakes.group.name}) | raw }}
                {% endif %}
            {% endif %}
        </p>
    {% endif %}
{% endblock %}
