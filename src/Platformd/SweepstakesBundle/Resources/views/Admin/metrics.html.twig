{% extends 'SpoutletBundle::adminLayout.html.twig' %}
{% block title %}Sweepstakes{% endblock %}

{% block content %}

<h1>Sweepstakes</h1>

<table class="table table-striped table-bordered tablesorter">
    <thead>
        <tr>
            <th>Name</th>
            <th>All</th>
            <th>Global</th>

            {% for site in sites %}
                {% if site == 'North America' %}
                    <th>NA</th>
                {% endif %}

                {% if site == 'India' %}
                    <th>IN</th>
                {% endif %}

                {% if site == 'Latin America' %}
                    <th>LATAM</th>
                {% endif %}

                {% if site == 'Europe' %}
                    <th>EUR</th>
                {% endif %}

                {% if site == 'Singapore' %}
                    <th>SG</th>
                {% endif %}

                {% if site == 'Australia / New Zealand' %}
                    <th>ANZ</th>
                {% endif %}

                {% if site == 'China' %}
                    <th>CN</th>
                {% endif %}

                {% if site == 'Japan' %}
                    <th>JP</th>
                {% endif %}

                {% if site == 'Demo' %}
                    <th>Demo</th>
                {% endif %}

                {% if site == 'Asia Pacific/Japan' %}
                    <th>APJ</th>
                {% endif %}

                {% if site == 'Western Europe' %}
                    <th>EU-WE</th>
                {% endif %}

                {% if site == 'Central Europe' %}
                    <th>EU-CE</th>
                {% endif %}

            {% endfor %}

        </tr>
    </thead>
    <tbody>
        {% for sweepstakesId, metric in metrics %}
        <tr>
            <td>{{ metric.name }}</td>
            <td><a href="{{ path('admin_sweepstakes_metrics_csv', { 'id': sweepstakesId, 'region': 'all' }) }}">{{ metric.total }}</a></td>

            {% if sweepstakesId in regionAssignedCounts|keys %}{% set globalCount = metric.total - regionAssignedCounts[sweepstakesId] %}{% else %}{% set globalCount = metric.total %}{{ metric.total }}{% endif %}

            <td>{% if globalCount > 0 %}<a href="{{ path('admin_sweepstakes_metrics_csv', { 'id': sweepstakesId, 'region': 'global' }) }}">{{ globalCount }}</a>{% else %}0{% endif %}</td>
            {% for key, site in sites %}
                <td>
                    {% if site in metric.sites|keys %}
                        <a href="{{ path('admin_sweepstakes_metrics_csv', { 'id': sweepstakesId, 'region': key }) }}">{{ metric.sites[site] }}</a>
                    {% else %}
                        0
                    {% endif %}
                </td>
            {% endfor %}
        </tr>
        {% else %}
        <tr>
            <td colspan="{{ 3 + (sites | length) }}">
                There are no sweepstakes.
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
