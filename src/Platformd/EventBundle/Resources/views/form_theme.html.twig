{% extends 'SpoutletBundle:Admin:_bootstrapForms.html.twig' %}

{% block generic_label %}
{% spaceless %}
    {% set attr = attr|merge({'class': attr.class|default('') ~ ' form-lbl'}) %}
    {% if required %}
        {% set attr = attr|merge({'class': attr.class|default('') ~ ' required'}) %}
    {% endif %}
    {% set attr = attr|merge({'class': 'control-label'}) %}
    <label{% for attrname,attrvalue in attr %} {{attrname}}="{{attrvalue}}"{% endfor %}>
        {{ label|trans }}
        {% if required %}
            <span class="required">*</span>
        {% endif %}
    </label>
{% endspaceless %}
{% endblock %}

{% block date_widget %}
{% spaceless %}
    {% set attr = attr|merge({'class': attr.class|default('') ~ ' date-picker'}) %}
    {{ block('field_widget') }}
{% endspaceless %}
{% endblock %}

{% block time_widget %}
{% spaceless %}
    <div class="event-time-selection">
        at {{ form_widget(form.hour) }} : {{ form_widget(form.minute) }}
    </div>
{% endspaceless %}
{% endblock time_widget %}
