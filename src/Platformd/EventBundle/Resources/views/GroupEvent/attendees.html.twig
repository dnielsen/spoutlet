{% extends 'SpoutletBundle::layout.html.twig' %}
{% set canRemove = (app.user == event.user) or (app.user is not null and app.user.adminLevel == "ROLE_SUPER_ADMIN") %}

{% block title 'Attendees - ' ~ event.name %}

{% block content %}

    <div class="std_1col" style="padding:0;">
        {% if event.bannerImage %}
            <div id="event-banner" style="background:url('{{ media_path_nice(event.bannerImage) }}') top left no-repeat; background-size: 100% 100%; margin: -10px 0 0 0;"></div>
        {% else %}
            <div id="event-banner" style="background:url('{{ asset('bundles/event/images/events_default_banner.jpg') }}') top left no-repeat; background-size: cover;"></div>
        {% endif %}
    </div>

    <div class="std_1col" style="padding: 0;">
        <div class="events-sub-nav-wrapper">
           <div class="events-sub-nav">
                <ul>
                    <li><a href="{{ event | pd_link }}">Back to Event</a></li>
                    {% if app.user == event.user or (app.user is not null and app.user.adminLevel == 'ROLE_SUPER_ADMIN') %}
                        <li><a href="{{ path("group_event_edit", { 'eventId': event.id, "groupSlug": event.group.slug }) }}">{{ 'platformd.events.event_show.edit_event' | trans }}</a></li>
                        {% if event.registrationOption == "REGISTRATION_ENABLED" %}
                            <li><a href="{{ path("group_event_contact", event.getLinkableRouteParameters) }}">{{ 'platformd.events.event_show.contact_attendees' | trans }}</a></li>
                        {% endif %}
                    {% endif %}
                    <li><a href="{{ path(event.group.getLinkableRouteName, event.group.getLinkableRouteParameters) }}">Group Home</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="std_2col">
        <div class="left">
            <div class="widget-66">
                <div class="widget-header">
                    <div class="widget-title">Attendees</div>
                </div>
                <div class="widget-content">
                    <table style="width: 100%;">
                        <thead style="text-align:left;">
                            <tr>
                                {% if canRemove %}<th style="width: 125px; padding:5px 0;">Action</th>{% endif %}
                                <th style="padding:5px 0;">Username</th>
                                <th style="width: 200px; padding:5px 0;">Joined</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for attendee in attendees %}
                                <tr>
                                    {% if canRemove %}
                                        <td style="padding:5px 0;">
                                            <a href="{{ path('group_event_remove_attendee', { 'groupSlug': event.group.slug, 'eventSlug': event.slug, 'userId' : attendee.id }) }}" onclick="return confirm('Are you sure you want to remove \'{{ attendee.username }}\' from this event?');">Remove</a>
                                        </td>
                                    {% endif %}
                                    <td style="padding:5px 0;">
                                        <a href="{{ cevo_account_link(attendee.username) }}">{{ attendee.username }}</a>
                                    </td>
                                    <td style="padding:5px 0;">{{ attendee.rsvpAt | date('date_format' | trans) }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan={% if canRemove %}"3"{% else %}"2"{% endif %}>
                                        <em>There are no attendees!</em>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="widget-footer">&nbsp;</div>
            </div>
        </div>
        <div class="right">
            <div>
                {% include 'SpoutletBundle:Default:_dealsAd.html.twig' %}
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}

        {{ parent() }}
         <link rel="stylesheet" type="text/css" href="{{ asset('bundles/event/css/event.css') }}" />

{% endblock %}
