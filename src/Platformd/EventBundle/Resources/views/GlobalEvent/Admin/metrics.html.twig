{% extends 'SpoutletBundle::adminLayout.html.twig' %}
{% block title %}{{ "platformd.events.admin.title" | trans }}{% endblock %}

{% block content %}
<table class="table table-striped table-bordered tablesorter">
    <thead>
        <tr>
            <th>Event Title</th>
            <th>Status</th>
            <th>Group</th>
            <th>Event Organizer</th>
            <th>Region</th>
            <th>Event Start Date</th>
            <th>Event End Date</th>
            <th># of Attendees</th>
            <th>Game</th>
        </tr>
    </thead>
    <tbody>
        {% for result in results %}
            {% set status = (result.deleted == false ) ? 'Active' : 'Inactive' %}
            {% set region = '' %}
            {% for site in result.sites %}
                {% set region = region ~ '[' ~ site.name ~ ']' %}
            {% endfor %}
            <tr>
                <td>{{ result.name }}</td>
                <td>{{ status }}</td>
                <td>{% if result.group is defined %}{{ result.group.name }}{% else %}N/A{% endif %}</td>
                <td>{% if result.group is not defined %}{{ result.organizer }}{% else %}N/A{% endif %}</td>
                <td>
                    {{ region }}
                </td>
                <td>{{ result.startsAt | date('m/d/Y') }}</td>
                <td>{{ result.endsAt | date('m/d/Y') }}</td>
                <td>{{ result.attendeeCount }}</td>
                <td>{{ result.game.name }}</td>
            </tr>
        {% else %}
            No events found
        {% endfor %}
    </tbody>
    </table>
{% endblock %}
