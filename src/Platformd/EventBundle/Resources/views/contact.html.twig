{% extends 'SpoutletBundle::layout.html.twig' %}
{% form_theme form 'EventBundle::form_theme.html.twig' %}

{% block title event.name %}

{% block content %}

    <div id="event-contact-page">

        {% if event.bannerImage %}
            <div class="std_1col">
                <div id="event-banner" style="background:url('{{ media_path_nice(event.bannerImage) }}') top left no-repeat;">
            </div>
        {% endif %}

        <div class="std_2col" style="min-height: 500px; margin-top: 10px;">
            <div class="left">
                <div class="widget-66">
                    <div class="widget-header" style="padding-bottom:10px;">
                        <div class="widget-title">
                            <div id="event-contact-title">Contact Attendees By Email</div>
                        </div>
                    </div>
                    <div class="widget-content">
                        <form id="event-contact-form" action="{{ path(event.getRoutePrefix ~ 'contact', event.linkableRouteParameters) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
                            {{ form_widget(form) }}
                            <div class="form-actions" style="padding-left: 100px;">
                                <button type="submit" id="preview" class="btn btn-primary" formnovalidate>Preview</button>
                                <button type="submit" id="submit" class="btn btn-primary" style="margin-left: 10px;" formnovalidate>Create</button>
                                <button id="cancel" class="btn btn-primary" rel="{{ path('groups') }}" style="margin-left: 10px;">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

            <div class="right">

                <div class="widget-33" id="event-details-widget" style="height: auto;">
                    <div class="widget-header">
                        <div class="widget-title">{{ event.attendees.count }} Attending</div>
                    </div>
                    <div class="widget-content">

                        <div id="event-attendee-list">
                            <hr class="faded" />
                            <div class="event-attendee">
                                <div class="event-hover-div"></div>
                                <img src="{{ asset(get_avatar_url(event.user)) }}" alt="{{ event.user.username }}" />
                                <a href="{{ cevo_account_link(event.user.username) }}"><span class="username">{{ event.user.username }}</span></a>
                                <span id="event-host-tag">Event Host</span>
                            </div>
                            {% for attendee in event.attendees %}
                                {% if event.user != attendee %}
                                    <hr class="faded" />
                                    <div class="event-attendee">
                                        <div class="event-hover-div"></div>
                                        <img src="{{ asset(get_avatar_url(attendee)) }}" alt="{{ attendee.username }}" />
                                        <a href="{{ cevo_account_link(attendee.username) }}"><span class="username">{{ attendee.username }}</span></a>
                                    </div>
                                {% endif %}
                            {% else %}
                                No attendees!
                            {% endfor %}
                            <hr class="faded" />
                        </div>

                    </div>

                </div>

            </div>

        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function() {

            $('#preview').click(function(){
                $('#event-contact-form').attr('action', '{{ path(event.getRoutePrefix ~ 'email_preview', event.linkableRouteParameters) }}');
                $('#event-contact-form').attr('target', '_blank');
            });

            $('#submit').click(function(){
                $('#event-contact-form').attr('action', '{{ path(event.getRoutePrefix ~ 'contact', event.linkableRouteParameters) }}');
                $('#event-contact-form').removeAttr('target');
            });

            $('.event-attendee').hover(function() {
                $(this).children('.event-hover-div').show();
            },
            function() {
                $(this).children('.event-hover-div').hide();
            });

            $('.event-attendee').click(function() {
                var username = $(this).first('.username').text();
                alert(username);
            });

        });
    </script>

{% endblock %}

{% block stylesheets %}

        {{ parent() }}
         <link rel="stylesheet" type="text/css" href="{{ asset('bundles/event/css/event.css') }}" />

{% endblock %}
