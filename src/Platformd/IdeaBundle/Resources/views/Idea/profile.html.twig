{% extends 'UserBundle::accountLayout.html.twig' %}

{% block profile_content %}

    {% if ownProfile or isAdmin %}
        <a href="{{ path('profile_edit', {'userId': user.id}) }}" class="btnLg right">Edit Profile</a>
    {% endif %}

    <h1>{{ user.name }}</h1>
    <hr>
    <div class="left">
       <table summary="Personal Information" class="tblStyle">
        <tbody>
            <tr>
              <td width="185">Title</td>
              {% if user.title %}
                <td width="483"> {{ user.title }} </td>
              {% endif %}
            </tr>
                <tr>
                  <td>Organization</td>
                  {% if user.organization %}
                    <td> {{ user.organization }}</td>
                  {% endif %}
                </tr>
            {% if user.industry %}
                <tr>
                  <td>Industry</td>
                  <td> {{ user.industry }}</td>
                </tr>
            {% endif %}
            {% if user.aboutMe %}
                <tr>
                  <td>About</td>
                  <td> {{ user.aboutMe }}</td>
                </tr>
            {% endif %}
            {% if user.linkedIn %}
                <tr>
                  <td>LinkedIn</td>
                  <td><a href="{{ user.linkedIn }}" class="blu" target="_blank">{{ user.linkedIn }}</a></td>
                </tr>
            {% endif %}
            {% if user.twitterUsername %}
                <tr>
                  <td>Twitter</td>
                  <td><a href="http://twitter.com/{{ user.twitterUsername }}" class="blu" target="_blank">{{ user.twitterUsername }}</a></td>
                </tr>
            {% endif %}
            {% if user.website %}
                <tr>
                  <td>Website</td>
                  <td><a href="{{ user.website }}" class="blu" target="_blank">{{ user.website }}</a></td>
                </tr>
            {% endif %}
            {% if ownProfile or isAdmin %}
                <tr>
                    <td>Email address:</td>
                    <td>{{ user.email }}</td>
                </tr>
                {% if user.professionalEmail %}
                    <tr>
                      <td>Professional Email</td>
                      <td> {{ user.professionalEmail }} </td>
                    </tr>
                {% endif %}
                {% if user.mailingAddress %}
                    <tr>
                      <td>Mailing Address</td>
                      <td> {{ user.mailingAddress }} </td>
                    </tr>
                {% endif %}
            {% endif %}
        </tbody>
       </table>
    </div>
    <div class="clr spcr-b"></div>
{% endblock %}
