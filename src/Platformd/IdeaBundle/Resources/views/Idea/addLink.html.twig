{% extends 'IdeaBundle::event_layout.html.twig' %}

{% block content %}

    <h1>Add Link</h1>

    <form action="{{ path('idea_add_link', {'groupSlug': groupSlug, 'eventSlug': eventSlug}) }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}

        <br><br>
        <input type="hidden" name="id" value={{ id }}>
        <input type="submit" value="Add Link" />
    </form>

{% endblock %}
