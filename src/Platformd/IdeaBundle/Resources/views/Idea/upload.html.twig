{% extends 'IdeaBundle::event_layout.html.twig' %}

{% block event_content %}

    <h1>Upload File</h1>

    <form action="{{ path('idea_upload', {'groupSlug': group.slug, 'eventSlug': event.slug}) }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}

        <br><br>
        <input type="hidden" name="id" value={{ id }}>
        <input type="submit" value="Upload Image" />
    </form>

{% endblock %}
