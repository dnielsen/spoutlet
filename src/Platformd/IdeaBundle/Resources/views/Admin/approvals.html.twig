{% extends 'IdeaBundle::event_layout.html.twig' %}

{% block event_content %}

    <h1>Users Pending Approval</h1>

    <table class="paddedTable" id="approvals">
    {% for user in awaitingApproval %}
        <tr>
            <td><a href="{{ path('profile', {'userId': user.id}) }}"> {{ user.name }}</a><br/></td>
            <td><a href="{{ path('idea_admin_process_approval', {'groupSlug': group.slug, 'eventId': event.id, 'userId': user.id, 'action': 'approve'}) }}" class="btn marginlft">Approve</a></td>
            <td><a href="{{ path('idea_admin_process_approval', {'groupSlug': group.slug, 'eventId': event.id, 'userId': user.id, 'action': 'reject'}) }}" class="btn redButton marginlft">Reject</a></td>
        </tr>
    {% endfor %}
    </table>

{% endblock %}