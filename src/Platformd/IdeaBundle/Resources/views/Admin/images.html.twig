{% extends 'IdeaBundle::event_layout.html.twig' %}

{% block event_content %}

    <h1>Event Slider Images</h1>

    <h2>Add Image</h2> (Approximately 644 x 340)

    <form action="{{ path('idea_admin_images', {'groupSlug': group.slug, 'eventId': event.id}) }}" method="post" {{  form_enctype(form) }}>
        {{  form_errors(form) }}
        {{  form_row(form.fileObject) }}
        {{  form_rest(form) }}

        <br/>
        <input type="submit" value="Add" class="button btn btn-primary"/>
    </form>

    <hr/>

    {%  for image in event.rotatorImages %}
        <img src="{{  media_path(image) }}" style="max-width: 150px;max-height: 150px;vertical-align: middle"/>
        <a href="{{ path('idea_admin_remove_image', {'groupSlug': group.slug, 'eventId': event.id, 'imageId': image.id}) }}" onclick="return confirm('Are you sure you want to delete this image?');">
            <img src="{{ asset('/bundles/spoutlet/image/delete-icon.png') }}" class="delete"/>
        </a>
        <br/><hr/>
    {% endfor %}

{% endblock %}