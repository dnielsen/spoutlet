{% extends 'IdeaBundle::event_layout.html.twig' %}{% block event_content %}    <h1>Admin Panel</h1>    <table class="paddedTable">        <tr>            <td>                <form action = {{ path('idea_admin_event', {'groupSlug': group.slug, 'eventSlug': event.slug}) }} method="get" id='event'>                    <input type="submit" value="Configure Event" class="left" />                </form>            </td>            <td>                <form action = {{ path('idea_admin_criteria_all', {'groupSlug': group.slug, 'eventSlug': event.slug}) }} method="get" id='criteria'/>                    <input type="submit" value="Configure Criteria" class="left" />                </form>            </td>            <td>                <form action = {{ path('idea_summary', {'groupSlug': group.slug, 'eventSlug': event.slug}) }} method="get" id='summary'/>                    <input type="submit" value="Round Summary" class="left" />                </form>            </td>        </tr>        <tr>            <td>                <form action = {{ path('group_event_view', {'groupSlug': group.slug, 'eventSlug': event.slug}) }} method="get" id='home'>                    <input type="submit" value="Home" form='home' />                </form>            </td>        </tr>    </table>{% endblock %}