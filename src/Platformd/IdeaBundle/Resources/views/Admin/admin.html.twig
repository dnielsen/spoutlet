{% extends 'IdeaBundle::event_layout.html.twig' %}

{% block event_content %}

    <div class="adminRow">
        <h1>Event Configuration</h1>
        <a href="{{ path('idea_admin_event', {'groupSlug': group.slug, 'eventSlug': event.slug}) }}">
            <input type="submit" value="Event Details" class="marginlft" />
        </a>
        <a href="{{ path('idea_admin_images', {'groupSlug': group.slug, 'eventSlug': event.slug}) }}">
            <input type="submit" value="Add Images" class="marginlft" />
        </a>
        <a href="{{ path('idea_admin_export_ideas', {'groupSlug': group.slug, 'eventSlug': event.slug}) }}">
            <input type="submit" value="Export Ideas to CSV" class="marginlft" />
        </a>
        <a href="{{ path('idea_admin_export_users', {'groupSlug': group.slug, 'eventSlug': event.slug}) }}">
            <input type="submit" value="Export Users to CSV" class="marginlft" />
        </a>
        <a href="{{ path('idea_admin_export_votes', {'groupSlug': group.slug, 'eventSlug': event.slug}) }}">
            <input type="submit" value="Export Scores to CSV" class="marginlft" />
        </a>
        {% if event.private %}
        <a href="{{ path('idea_admin_member_approvals', {'groupSlug': group.slug, 'eventSlug': event.slug}) }}">
            <input type="submit" value="Membership Approvals" class="marginlft"/>
        </a>
        {% endif %}
    </div>

    {% if event.type == 'ideathon' %}
        <div class="adminRow">
            <h1>Judging Controls</h1>
            <a href="{{ path('idea_admin_criteria_all', {'groupSlug': group.slug, 'eventSlug': event.slug}) }}">
                <input type="submit" value="Configure Criteria" class="marginlft" />
            </a>
            <a href="{{ path('idea_summary', {'groupSlug': group.slug, 'eventSlug': event.slug}) }}">
                <input type="submit" value="Round Summary" class="marginlft" />
            </a>
        </div>
    {% endif %}

    <div class="adminRow">
        <a href="{{ path('group_event_view', {'groupSlug': group.slug, 'eventSlug': event.slug}) }}" method="get" id='home'>
            <input type="submit" value="Home" form='home' />
        </a>
    </div>

{% endblock %}
