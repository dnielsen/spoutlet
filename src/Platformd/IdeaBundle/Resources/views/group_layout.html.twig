{% extends 'SpoutletBundle::layout.html.twig' %}

{%  block header %}

    {% embed 'SpoutletBundle::header.html.twig' %}

        {% block pre_topNav %}
            <div id="header-group">
                {% if asset_exists('themes/' ~ site.theme ~ '/spoutlet/img/logo_'~site.defaultLocale~'_sm.jpg') %}
                    {% set topNavBannerPath = 'themes/' ~ site.theme ~ '/spoutlet/img/logo_'~site.defaultLocale~'_sm.jpg' %}
                {% else %}
                    {% set topNavBannerPath = 'themes/' ~ site.theme ~ '/spoutlet/img/logo-campsite-sm.png' %}
                {% endif %}
                <a href="{{ path('default_index') }}">
                    <img src="{{ asset(topNavBannerPath) }}" width="100" height="23" alt="Campsite Small" class="brand-small">
                </a>
        {% endblock %}

        {% block extra_user_controls %}
        {% endblock %}

        {% block banner %}
            {% if group.groupAvatar is not null %}
                {% set bannerContent = '<img src="' ~ media_path(group.groupAvatar) ~ '" alt="Group Logo" id="brand-group">' %}
            {% else %}
                {% set bannerContent = '<span id="groupHeader">' ~ group.name ~ '</span>' %}
            {% endif %}

            <a href="{{ path('group_show', {'slug': group.slug}) }}">{{ bannerContent | raw }}</a>

            <div id="tagline">share. learn. grow.</div>

        {% endblock %}

    {% endembed %}

    {% embed 'SpoutletBundle::navigation.html.twig' %}

        {% block menu_items %}

            <li><a href="{{ path('info_page', {'groupSlug': group.slug, 'page': 'speak'}) }}">Speak</a></li>
            <li><a href="{{ path('info_page', {'groupSlug': group.slug, 'page': 'sponsor'}) }}">Sponsor</a></li>
            <li><a href="{{ path('info_page', {'groupSlug': group.slug, 'page': 'volunteer'}) }}">Volunteer</a></li>

        {% endblock %}

    {% endembed %}

{%  endblock %}



