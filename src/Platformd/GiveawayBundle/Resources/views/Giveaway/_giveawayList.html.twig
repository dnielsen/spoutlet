            <table>
                <tbody>
                    <tr>
                        <th style="width:659px;">{{ 'platformd.giveaway.giveaway' | trans }}</th>
                        <th style="width:212px;">{{ 'platformd.giveaway.giveaway_listings.keys_remaining' | trans }}</th>
                    </tr>
                    {% if giveaways|length == 0 %}
                    <tr>
                        <td style="text-align:center; padding:20px 0;" colspan="5">
                            {# basically a hack, in one case I need another message, that has an HTML anchor tag in it #}
                            <strong>{{ no_giveaways_message | trans }}</strong>
                        </td>
                    </tr>
                    {% else %}
                    {% for giveaway in giveaways %}
                    <tr class="eventListGroup_online">
                        <td><a href="{{ path('giveaway_show', { 'slug' : giveaway.slug }) }}">{{ giveaway.name }}</a></td>
                        <td>
                            XXXXXX
                        </td>
                    </tr>
                    {% endfor %}
                    {% endif %}
                </tbody>
            </table>