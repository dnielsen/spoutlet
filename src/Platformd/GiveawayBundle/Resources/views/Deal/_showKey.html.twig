{% extends "SpoutletBundle::_flashMessage.html.twig" %}
{% block type %}success{% endblock %}
{% block body %}
    <p>{{ 'deal_redeem_success_code' | trans }}</p>
    <p>
        {%- if data.deal_code_is_url -%}
            <a href='{{ data.promotion_assigned_key | raw }}' target='_blank'>{{ data.promotion_assigned_key | wrap | raw }}</a>
        {%- else -%}
            {{ data.promotion_assigned_key }}
        {%- endif -%}
    </p>
    <p>{{ 'deal_redeem_success' | trans }}</p>
    {% if features.hasGroups %}
        <p>
            {% if data.promotion_group_slug %}
                {% if data.is_member_of_promotion_group %}
                    {{ 'deal_join_group_success' | trans | replace({'%link%': path('group_show', {'slug': data.promotion_group_slug}), '%group%': data.promotion_group_name}) | raw }}
                {% endif %}
            {% endif %}
        </p>
    {% endif %}
{% endblock %}
