{% form_theme form 'SpoutletBundle:Admin:normalLabel.html.twig' %}
{% form_theme form 'SpoutletBundle:Admin:_bootstrapForms.html.twig' %}

<div class="game-page-form">
    {{ form_errors(form) }}

    <fieldset>
        <legend>a) Basic Information</legend>

        <div class="row-fluid first">
            <div class="span6">
                {{ form_row(form.game) }}
                {{ form_row(form.slug) }}
                {{ form_row(form.externalUrl) }}
                <p class="help">
                    (Optional) If filled in, this URL will override the destination of any links that would normally point to this game's Game Page.
                </p>
                {{ form_row(form.createdAt) }}
                <p class="help">
                    Controls the order in which games are shown (newest first). You can leave this blank and it will be set automatically.
                </p>
            </div>
            <div class="span6">
                {{ form_row(form.sites) }}
                {{ form_row(form.status) }}
                {{ form_row(form.recommendedDesktopUrl) }}
                {{ form_row(form.recommendedLaptopUrl) }}
                <p class="help">
                    Provide both urls for recommended rigs in order for the ad to appear on the game page.
                </p>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>b) (optional) Images</legend>

        <div class="row-fluid first">
            <div class="span6">
                {{ form_row(form.buttonImage1) }}
            </div>
            <div class="span6">
                {{ form_row(form.buttonUrl1) }}
            </div>
            <div class="clear"></div>
        </div>

        <div class="row-fluid">
            <div class="span6">
                {{ form_row(form.buttonImage2) }}
            </div>
            <div class="span6">
                {{ form_row(form.buttonUrl2) }}
            </div>
        </div>

        <div class="row-fluid">
            <div class="span6">
                {{ form_row(form.backgroundImage) }}
            </div>
            <div class="span6">

            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>c) Details</legend>

        <div class="row-fluid first">
            <div class="span6">
                {{ form_row(form.aboutGame) }}
                {{ form_row(form.legalVerbiage) }}
            </div>
            <div class="span6">
                {{ form_row(form.keyFeature1) }}
                {{ form_row(form.keyFeature2) }}
                {{ form_row(form.keyFeature3) }}
            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>d) Videos</legend>

        <div class="row-fluid first">
            <div class="span6">
                {{ form_row(form.youtubeIdTrailer1) }}
                <p class="help">
                    Paste Youtube ID (e.g. UN6ZT9lDIOk if the URL is something like http://www.youtube.com/watch?v=UN6ZT9lDIOk&feature=fvst
                </p>
            </div>
            <div class="span6">
                {{ form_row(form.youtubeIdTrailer1Headline) }}
                <p class="help">
                    Must include game title in the context for SEO purposes.
                </p>
            </div>
        </div>

        <div class="row-fluid first">
            <div class="span6">
                {{ form_row(form.youtubeIdTrailer2) }}
                <p class="help">
                    Paste Youtube ID
                </p>
            </div>
            <div class="span6">
                {{ form_row(form.youtubeIdTrailer2Headline) }}
                <p class="help">
                    Must include game title in the context for SEO purposes.
                </p>
            </div>
        </div>

        <div class="row-fluid first">
            <div class="span6">
                {{ form_row(form.youtubeIdTrailer3) }}
                <p class="help">
                    Paste Youtube ID
                </p>
            </div>
            <div class="span6">
                {{ form_row(form.youtubeIdTrailer3Headline) }}
                <p class="help">
                    Must include game title in the context for SEO purposes.
                </p>
            </div>
        </div>

        <div class="row-fluid first">
            <div class="span6">
                {{ form_row(form.youtubeIdTrailer4) }}
                <p class="help">
                    Paste Youtube ID
                </p>
            </div>
            <div class="span6">
                {{ form_row(form.youtubeIdTrailer4Headline) }}
                <p class="help">
                    Must include game title in the context for SEO purposes.
                </p>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>e) Media Gallery (Wallpapers/Screenshots)</legend>

        <ul class="medias-list clearfix row-fluid" data-prototype="{{ form_widget(form.mediaGalleryMedias.vars.prototype)|e }}">
            {# see the CSS file this explanation #}
            <li class="dummy" style="list-style: none;"></li>
            {% for mediaForm in form.mediaGalleryMedias %}
                <li class="span5 image-li existing-element" style="list-style: none;">{{ form_row(mediaForm) }}</li>

                {% if loop.index is even %}
                    <li class="clear"></li>
                {% endif %}
            {% endfor %}
        </ul>

        {# this prints an empty div, but it's necessary, otherwise form_rest tries to print this, which prints a logo #}
        {{ form_widget(form.mediaGalleryMedias) }}
    </fieldset>

    <fieldset>
        <legend>f) Facebook Info</legend>
        <div class="row-fluid first">
            <div class="span6">
                {{ form_row(form.openGraphOverride.description) }}
                {{ form_row(form.openGraphOverride.thumbnail) }}
            </div>
        </div>
    </fieldset>

    {{ form_rest(form) }}
</div>
