{% extends 'SpoutletBundle::adminLayout.html.twig' %}

{% block content %}
<h1>Games</h1>

<table class="table table-striped table-bordered tablesorter">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for game in entities %}
        <tr>
            <td><a href="{{ path('admin_game_edit', { 'id': game.id }) }}">{{ game.name }}</a></td>
            <td>
                {% if game.category %}
                    {{ (constant('Platformd\\GameBundle\\Entity\\Game::GAME_CATEGORY_LABEL_PREFIX')~game.category) | trans }}
                {% else %}
                    <emph>none</emph>
                {% endif %}
            </td>
            <td>
                <a href="{{ path('admin_game_edit', { 'id': game.id }) }}">edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('admin_game_new') }}">
    Create a new entry
</a>
{% endblock %}
